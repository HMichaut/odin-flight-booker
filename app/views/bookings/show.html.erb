<h1>Show Booking</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Stop</th>
      <th>Departure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @booking.flight.start_airport.code %></td>
      <td><%= @booking.flight.stop_airport.code %></td>
      <td><%= @booking.flight.start_datetime %></td>
    </tr>
  </tbody>
</table>
<div>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking.passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<%= link_to 'Back', flights_path %>
